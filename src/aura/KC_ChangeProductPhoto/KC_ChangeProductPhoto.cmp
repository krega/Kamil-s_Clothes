

    <aura:component description="KC_ChangeProductPhoto" implements="force:appHostable,flexipage:availableForAllPageTypes, force:hasRecordId" controller="KC_AddProductController">
        <aura:attribute name="recordId" type="String" />
        <aura:attribute name="photos" type="List" />
        <aura:attribute name="mainPhotoUrl" type="String" />
        <aura:attribute name="mainPhotoIndex" type="Integer" />

        <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>

        <div class="slds-card">
            <h2>{!$Label.c.KC_ChangePhoto}</h2>

            <aura:iteration items="{!v.photos}" var="photo" indexVar="index" >
                <img src="{!photo.ImgUrl__c}" width="100" height="200" data-id="{!index}" aura:id="productImg" onclick="{!c.setNewMainPhoto}"/>
            </aura:iteration>
        </div>

    </aura:component>